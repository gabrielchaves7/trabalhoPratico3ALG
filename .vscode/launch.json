/* launch.json */
{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Debug C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/main",
            "preLaunchTask": "task de build",
            "internalConsoleOptions": "openOnSessionStart",
            "logging": {
                "moduleLoad": false,
                "programOutput": true,
                "trace": false
            },
            "showDisplayString": false,
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true, // set true to enable keyboard input
            "osx": {
                "MIMode": "lldb"
            }
        }
    ]
}